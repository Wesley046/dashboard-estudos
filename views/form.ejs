<!-- Formulário -->
<h1>Formulário de Estudo</h1>
<form action="/api/estudos" method="POST">
  <input type="text" name="disciplina" placeholder="Disciplina" required>
  <input type="number" name="horas_estudadas" placeholder="Horas Estudadas" required>
  <input type="date" name="data_estudo" required>
  <button type="submit">Salvar</button>
</form>
